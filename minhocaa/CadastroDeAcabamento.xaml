<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.CadastroAcabamento">   

    <Grid>
        <Label Text="Cadastro de Acabamento"
               FontSize="Title"
               HorizontalTextAlignment="Center" />
        <Button Text="Colaboradores"
                BackgroundColor="Gray"
                TextColor="White"
                Clicked="Colaboradores_Clicked" />
        <Grid GridRows="2" GridColumns="2">
            <Button Text="João" GridRow="0" GridColumn="0" Clicked="Colaborador_Clicked" />
            <Button Text="Pedro" GridRow="0" GridColumn="1" Clicked="Colaborador_Clicked" />
            <Button Text="André" GridRow="1" GridColumn="0" Clicked="Colaborador_Clicked" />
            <Button Text="Miguel" GridRow="1" GridColumn="1" Clicked="Colaborador_Clicked" />
        </Grid>
        <Grid GridRow="2" GridColumn="0" ColumnSpan="2">
            <Button Text="Voltar" BackgroundColor="Blue" TextColor="White" Clicked="Voltar_Clicked" GridColumn="0" />
            <Button Text="+" BackgroundColor="Green" TextColor="White" Clicked="Adicionar_Clicked" GridColumn="1" />
        </Grid>
    </Grid>
</ContentPage>