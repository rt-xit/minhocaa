<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.FrameDespacheDeTecido"
             BackgroundColor="Gray">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Tem certeza que deseja fazer agendamento?" 
               HorizontalOptions="Center" 
               TextColor="White"/>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="VOLTAR" 
                    BackgroundColor="Blue" 
                    TextColor="White" 
                    Clicked="OnBackClicked"/>
            <Button Text="AGENDAMENTO" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    Clicked="OnScheduleClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
