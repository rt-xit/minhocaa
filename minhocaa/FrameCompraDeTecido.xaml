<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.FrameCompraDeTecido"
             BackgroundColor="Gray">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Deseja adicionar mais tecidos?" 
               HorizontalOptions="Center" 
               TextColor="White"/>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Entry x:Name="inputText" WidthRequest="200"/>
            <Button Text="🗑️" 
                    BackgroundColor="Red" 
                    TextColor="White" 
                    Clicked="OnDeleteClicked"/>
            <Button Text="+" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    Clicked="OnAddClicked"/>
        </HorizontalStackLayout>
        <Button Text="VOLTAR" 
                BackgroundColor="Blue" 
                TextColor="White" 
                Clicked="OnBackClicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
