<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.FrameCadastroDeAcabamento"> 

    <Grid>
        <Label Text="Deseja adicionar novo colaborador?"
               FontSize="Title"
               HorizontalTextAlignment="Center" />
        <Grid GridRows="1" GridColumns="3">
            <Entry x:Name="NomeColaborador" GridRow="0" GridColumn="0" Placeholder="Nome do colaborador" />
            <Button Text="" GridRow="0" GridColumn="1" Clicked="RemoverCaractere_Clicked" />
            <Button Text="+" GridRow="0" GridColumn="2" Clicked="AdicionarColaborador_Clicked" />
        </Grid>
        <Button Text="Voltar" BackgroundColor="Blue" TextColor="White" Clicked="Voltar_Clicked" GridRow="1" />
    </Grid>
</ContentPage>