
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.Costura" 

             Title="Colaboradores de Costura">
    <Grid>
        <Button Text="Cadastro"
                HorizontalOptions="Center"
                Clicked="CadastroButtonClicked" />
        <ListView x:Name="ListaColaboradores"
                  ItemsSource="{Binding ListaColaboradores}"
                  ItemTemplate="{StaticResource ColaboradorTemplate}"
                  Margin="20">
        </ListView>
        <Grid RowDefinitions="Auto"
              ColumnDefinitions="*,Auto,Auto"
              Margin="20">
            <Button Text="Voltar"
                    Grid.Column="0"
                    Clicked="Voltar" />
            <Button Text=""
                    Grid.Column="1"
                    Clicked="ExcluirColaborador" />
            <Button Text="+"
                    Grid.Column="2"
                    Clicked="CadastroButtonClicked" />
        </Grid>
    </Grid>
</ContentPage>