<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="minhocaa.FrameCostura"
             Title="Adicionar Colaborador">
    <Grid>
        <Label Text="Deseja adicionar novo colaborador?"
               FontSize="18"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />
        <Entry x:Name="NomeColaboradorEntry"
               Placeholder="Digite o nome"
               Margin="20" />
        <Grid RowDefinitions="1*"
              ColumnDefinitions="*,Auto,*">
            <Button Text="️" // Utilize um ícone de lixeira de sua preferência
                    Grid.Column="1"
                    Clicked="ExcluirColaborador" />
            <Button Text="+"
                    Grid.Column="2"
                    Clicked="AdicionarColaborador" />
        </Grid>
        <Button Text="Voltar"
                Margin="20,0,20,20"
                Clicked="Voltar" />
    </Grid>
</ContentPage>